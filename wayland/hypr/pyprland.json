{
  "pyprland": {
    "plugins": ["scratchpads", "wallpapers"]
  },
  "scratchpads": {
    "volume": {
      "animation": "fromTop",
      "command": "pavucontrol",
      "class": "org.pulseaudio.pavucontrol",
      "size": "50% 90%",
      "unfocus": "hide",
      "lazy": true
    },
    "terminal": {
      "animation": "fromTop",
      "command": "kitty --title terminal_scratchpad /home/tiago/scripts/terminal-scratchpad.sh",
      "title": "terminal_scratchpad",
      "unfocus": "hide",
      "lazy": true
    }
  },
  "wallpapers": {
    "path": "/home/tiago/Wallpapers/current/",
    "interval": 180,
    "extensions": ["jpg", "jpeg", "png"],
    "recurse": true,
    "command": "swaybg -m fill -i \"[file]\"",
    "clear_command": "swaybg clear"
  }
}
